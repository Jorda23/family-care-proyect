{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@family-care-proyect/family-care-common": [
        "libs/family-care-common/src/index.ts"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
